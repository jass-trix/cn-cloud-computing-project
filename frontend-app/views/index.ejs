<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Frontend App</title>
  <!-- Add Bootstrap CSS link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
  <style>
    body {
      padding: 20px;
    }
    h1 {
      margin-bottom: 20px;
    }
    .item-card {
      margin-bottom: 20px;
    }
    .item-image {
      max-width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Cloud Computing Final Project</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/lambda-trigger">Lambda Trigger </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/s3-objects">S3 Objects</a>
              </li>
              <!-- Add additional navigation items as needed -->
          </ul>
      </div>
  </nav>

  <div class="container">
    <h1>Data from Backend API</h1>
    <div class="row">
      <% data.forEach(item => { %>
        <div class="col-md-4">
          <div class="card item-card">
            <img src="<%= item.image %>" class="card-img-top item-image" alt="<%= item.item_name %>">
            <div class="card-body">
              <h5 class="card-title"><%= item.item_name %></h5>
              <p class="card-text">Price: $<%= item.item_price %></p>
              <p class="card-text"><%= item.item_description %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <!-- Add Bootstrap JS and Popper.js scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
